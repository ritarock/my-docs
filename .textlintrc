{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 90
      },
      "no-exclamation-question-mark": false
    },
    "preset-ja-spacing": {
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
        "{ register } で指定。",
        "ただ `reflect.DeepEqual` は型安全ではないので注意"
      ]
    }
  }
}
